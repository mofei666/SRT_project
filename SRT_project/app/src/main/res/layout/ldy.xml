<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.example.dell.srt_project.Menu">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/fh"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朗读员"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="30sp"
            android:id="@+id/tv_title"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/ldy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前朗读员:小明"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="试听"
        android:id="@+id/st"
        android:drawableRight="@drawable/lb"
        />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioButton
            android:id="@+id/xm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/num1"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="小明"
            android:textColor="#000"
            android:checked="true"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/xq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="小倩"
            android:drawableLeft="@drawable/num2"
            android:textColor="#000"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/xh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/num3"
            android:textColor="#000"
            android:drawableRight="@android:drawable/btn_radio"
            android:text="小红"
            android:textSize="30dp" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="朗读员选择"
        android:textSize="20dp"/>

</LinearLayout>